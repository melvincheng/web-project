doctype html
html(lang="en")
	head
		title News Aggregator
		
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")

		link(rel="stylesheet", href="data.css")
		
		script(type="text/javascript", src="https://code.jquery.com/jquery-3.0.0.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")

		script(type="text/javaScript", src="data.js")
	body
		nav.navbar.navbar-default
			div.container-fluid
				div.navbar-header
					a.navbar-brand(href="/") News Aggregator
						small Powered by News API
				ul.nav.navbar-nav.navbar-right
					if (!username || (username == ''))
						li
							a(href="/login")
								span.glyphicon.glyphicon-log-in  Login
						li
							a(href="/registration")
								span.glyphicon.glyphicon-user  Sign up
					else
						div.navbar-text Welcome, 
						li.dropdown 
							a.toggle-dropdown(data-toggle="dropdown") #{username}
								span.caret
							ul.dropdown-menu
								li
									a(href="/logout") Logout

					
		div(name="articles")
		footer
			a(href="https://newsapi.org/") News API